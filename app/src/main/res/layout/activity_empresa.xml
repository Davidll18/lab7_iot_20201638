<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Mensaje de Bienvenida -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Empresa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Recaudación Total -->
    <TextView
        android:id="@+id/textViewRecaudacionTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recaudación total: S/ 0.00"
        android:textSize="16sp"
        android:layout_below="@id/textViewWelcome"
        android:layout_marginBottom="16dp" />

    <!-- Lista de Líneas de Buses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLineasBuses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewRecaudacionTotal" />
</RelativeLayout>
